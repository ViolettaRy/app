<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShopApp.Views.AnimalPage"
             Title="AnimalPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Picker x:Name="pickerCommand" Margin="10,0,0,0" WidthRequest="150"
        Title="Команда:"/>
            <Entry x:Name="Entry"  Margin="10,0,0,0" WidthRequest="500" Placeholder="Введите наименование животного"/>
        </HorizontalStackLayout>
        <Button HorizontalOptions="Start" Margin="10,10,0,0" Clicked="Clicked" Text="Выполнить" WidthRequest="150"/>
        <CollectionView x:Name="collectionView" SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame CornerRadius="0" Margin="0,10,0,10" BorderColor="BlueViolet" BackgroundColor="Transparent">
                        <VerticalStackLayout >
                            <Label Text="{Binding Name}" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>